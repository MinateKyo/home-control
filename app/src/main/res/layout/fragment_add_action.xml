<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.controller.AddActionController">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin">

            <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/headline_icon"
                    android:text="@string/icon_preview"
                    style="@style/TextAppearance.MaterialComponents.Overline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"/>

            <include
                    android:id="@+id/home_actions"
                    layout="@layout/home_actions_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/headline_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/displayInputLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/home_actions">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/displayNameField"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="All Lights Off"
                        android:hint="@string/display_name"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:id="@+id/serviceLabel"
                    android:text="@string/service_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/displayInputLayout"/>

            <Spinner
                    android:id="@+id/domainServiceSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/serviceLabel"/>

            <TextView
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:id="@+id/entityLabel"
                    android:text="@string/choose_entity_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/domainServiceSpinner"
                    tools:layout_editor_absoluteX="16dp"
                    />

            <com.google.android.material.chip.ChipGroup
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/entityLabel"
                    android:id="@+id/entityChipGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:visibility="visible"
                    app:chipSpacingVertical="4dp"
                    />


            <androidx.constraintlayout.widget.Group
                    android:id="@+id/entityGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="entityLabel,entityChipGroup"
                    android:visibility="gone"/>

            <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/isShortcutCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/set_as_shortcut_label"
                    app:layout_constraintTop_toBottomOf="@+id/entityChipGroup"
                    app:layout_constraintStart_toStartOf="@+id/entityChipGroup"
                    />

            <Button
                    android:layout_marginTop="24dp"
                    android:text="@string/add_action_button_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/addButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/isShortcutCheckBox"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>