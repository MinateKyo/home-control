<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mobile_navigation"
            app:startDestination="@id/homeFragment">
    <fragment
            android:id="@+id/homeFragment"
            android:name="com.andrewgiang.homecontrol.ui.screens.home.HomeFragment"
            android:label="Home"
            tools:layout="@layout/fragment_home">
        <action
                android:id="@+id/toSetupFragment"
                app:destination="@id/setUpFragment"/>
        <action
                android:id="@+id/action_homeFragment_to_addActionFragment"
                app:destination="@id/addActionFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
    <fragment
            android:id="@+id/setUpFragment"
            android:name="com.andrewgiang.homecontrol.ui.screens.setup.UrlSetupFragment"
            android:label="Sign In"
            tools:layout="@layout/fragment_sign_in">
        <deepLink
                android:id="@+id/deepLink"
                app:uri="https://andrewgiang.com/authorize?code={code}"/>
        <action
                android:id="@+id/backToMain"
                app:destination="@id/homeFragment"/>
    </fragment>
    <fragment
            android:id="@+id/addActionFragment"
            android:name="com.andrewgiang.homecontrol.ui.screens.AddActionFragment"
            android:label="fragment_add_action"
            tools:layout="@layout/fragment_add_action"/>

</navigation>
